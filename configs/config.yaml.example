# Juiced - CyTube TUI Client Configuration
# Format: YAML (more human-friendly than JSON)

# CyTube server domain
domain: https://cytu.be

# Channel to join
channel: your-channel-name

# Bot credentials: [username, password]
# For guest access, use: null
# NOTE: If your password starts with special characters (like @ # ! etc),
#       you MUST quote it: "your-password" or 'your-password'
user:
  - your-username
  - your-password

# Socket.IO settings
response_timeout: 1
restart_delay: 5

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# DEBUG recommended for beta testing to help identify issues
log_level: DEBUG

# TUI-specific settings
tui:
  # Theme name (see themes/ directory)
  # Options: default, hal9000, r2d2, c3po, t800, walle, robby, marvin, johnny5, robocop, data
  theme: default

  # Show join/quit messages in chat
  show_join_quit: true

  # Clock format: 12h (AM/PM) or 24h (military time)
  clock_format: 12h

  # Hide AFK users from userlist (default: false)
  hide_afk_users: false
